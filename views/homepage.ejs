<div ng-app="PBJ" ng-controller="AppCtrl">


  <div class="cursor-land">

    <div class="cursor"
         ng-repeat="cursor in cursors"
         ng-style="cursor.style">
      <span>{{cursor.name}}</span>
    </div>

  </div>

</div>




<style>
  body, html, * {
    margin: 0;
    padding: 0;
  }

  /* container for all the cursors */
  .cursor-land {
    position: relative;
    width: 100%;
    height: 100%;
  }

  /* a particular cursor */
  .cursor-land .cursor {
    position: absolute;

  }


</style>
