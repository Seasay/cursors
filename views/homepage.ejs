    </span> -->

  </div>


  <!-- chat input -->
  <textarea
    placeholder="type something here."
    ng-model="myCursor.chat"
    ng-keyup="typeInChatBox($event)"
    ng-class="{'saying': myCursor.chat}">
  </textarea>

</div>

