<div ng-app="PBJ" ng-controller="AppCtrl">

  <div class="cursor-land">

    <div class="cursor"
         ng-repeat="cursor in cursors"
         ng-style="cursor.style">
      <p ng-if="cursor.chat">
        <br/>
        <span>{{cursor.chat}}</span>
      </p>
    </div>



    <!-- <span class="my-cursor" ng-class="{'moving': myCursor.moving}"
          ng-style="myCursor.style">
